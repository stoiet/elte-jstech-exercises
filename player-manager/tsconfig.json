{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": false,
    "alwaysStrict": true,
    "baseUrl": "./",
    "disableSizeLimit": true,
    "checkJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "paths": {},
    "pretty": true,
    "removeComments": true,
    "rootDir": "./client",
    "strict": true,
    "strictFunctionTypes": false,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": ["./client/**/*.js"],
  "exclude": ["./node_modules", "./dist"]
}
